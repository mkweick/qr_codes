<div class="row">
	<% if admin? %>
		<div class="col-xs-12 col-sm-6 col-md-6">
	<% else %>
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
	<% end %>
		<div class="well">
			<h2 class="text-center">Active Events</h2>
			<hr />
			<% if @events.any? %>
				<div class="list-group">
					<% @events.each do |event| %>
						<% if admin? %>
							<%= link_to event, event_path(name: event),
								class: "list-group-item" %>
						<% else %>
							<%= link_to event, on_site_badge_path(name: event),
								class: "list-group-item" %>
						<% end %>
					<% end %>
				</div>
			<% else %>
				<div class="text-center">
					<h4>No active events :(</h4>
				</div>
			<% end %>
		</div>
	</div>

	<% if admin? %>
		<div class="col-xs-12 col-sm-6 col-md-6">
			<div class="well text-center">
				<h2>New Event</h2>
				<hr />
				<%= form_tag({ action: :upload }, multipart: true) do %>
					<div class="form-group">
						<%= select_tag 'city', options_for_select(@cities), required: "required",
							prompt: '-- Select Location --', class: "form-control" %>
					</div>

					<div class="form-group">
						<%= select_tag 'type', options_for_select(@types), required: "required",
							prompt: '-- Select Event Type --', class: "form-control" %>
					</div>

					<div class="form-group">
						<%= select_tag 'year', options_for_select(@years), required: "required",
							class: "form-control" %>
					</div>

					<div class="form-group text-left">
						<%= file_field_tag 'file', accept: ".xls" %>
						<span class="font-12">
							<span class="ss-red">Must be <strong>.xls</strong> format</span> - 
							<%= link_to '(Download Template)', download_path(type: 'template'),
								data: { turbolinks: false } %>
						</span>
					</div>

				  <%= submit_tag 'Create Event', class: "btn btn-primary" %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>