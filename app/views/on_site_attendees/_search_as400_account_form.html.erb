<%= form_tag as400_account_event_on_site_attendees_path(@event),
  method: 'get', remote: true, id: "search-as400-accounts-form",
  class: "crm-account-form" do %>
  
  <div class="form-group">
    <%= text_field_tag 'account_name', params[:account_name],
      placeholder: "Account Name...", id: "crm-account-an",
      class: "form-control" %>
  </div>

  <button id="crm-account-submit-btn" class="btn btn-sm btn-primary top-10 loader">
    <span class="submit-text">Search</span>
    <div class="spinner spinner-15 hide-me">
      <div></div><div></div><div></div><div></div><div></div><div></div>
      <div></div><div></div><div></div><div></div><div></div><div></div>
    </div>
  </button>
<% end %>