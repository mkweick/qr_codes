<div class="well text-center pad-top-15 <%= multi ? 'batch-multiple' : 'batch' %>">
  <h3 class="margin-0">New Batch</h3>
  <hr class="top-10" />
  <%= form_for [@event, @batch], multipart: true do |f| %>
    <div class="text-left">
      <% if multi %>
        <div class="form-group">
          <%= f.select 'location', options_for_select(@locations),
            { prompt: '-- Select Location --' },
            { required: true, class: "form-control" } %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.text_field 'description', required: true,
          placeholder: "Batch Description...", class: "form-control" %>
      </div>

      <%= f.file_field 'file', accept: ".xls", required: true %>

      <span class="font-12">
        <span class="ss-red">Must be <strong>.xls</strong> format</span> - 
        <%= link_to '(Download Template)', download_path(type: 'template'),
          data: { turbolinks: false } %>
      </span>
    </div>

    <%= f.submit 'Create', class: "btn btn-primary submit-btn" %>
  <% end %>
</div>