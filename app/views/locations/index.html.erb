<% @page_title = 'Locations' %>

<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="well">
    <h2 class="text-center">Locations</h2>
    <hr />
    <div class="text-center bottom-10">
      <%= link_to 'New Location', new_location_path, class: "btn btn-primary" %>
    </div>
    <% if @locations.any? %>
      <div class="list-group">
        <% @locations.each do |location| %>
          <li class="list-group-item">
            <%= location.city %>
            <span class="pull-right">
              <%= link_to [:edit, location], title: "Edit" do %>
                <span class="glyphicon glyphicon-pencil right-10"></span>
              <% end %>

              <%= link_to location, method: 'delete',
                title: "Delete", class: "red",
                data: { confirm: "Are you sure want to DELETE location #{location.city}?" } do %>
                  <span class="glyphicon glyphicon-remove-circle"></span>
              <% end %>
            </span>
          </li>
        <% end %>
      </div>
    <% else %>
      <div class="text-center top-30">
        <h4>No active locations :(</h4>
      </div>
    <% end %>
  </div>
</div>