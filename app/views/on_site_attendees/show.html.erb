<% @page_title = "Print Badge - #{@attendee.first_name} #{@attendee.last_name}" %>

<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= format_page_title %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= csrf_meta_tags %>
  <style>
    @media print {
      @page { margin: 0; }
    .no-print, .no-print * { display: none !important; }
    }
  </style>
</head>
<body id="print-qr">
  <div id="first-name" class="text-center"><%= @attendee.first_name %></div>
  <div id="last-name" class="text-center"><%= @attendee.last_name %></div>
  <div id="account-name" class="text-center"><%= @attendee.account_name %></div>

  <img src="<%= @qr_code.to_data_url %>" />

  <div class="no-print top-30">
    <div id="print-badge-btn">
      <a href="javascript:window.print()" class="btn btn-primary">
        Print Badge
      </a>
    </div>

    <div id="edit-attendee-btn" class="top-10">
      <%= link_to "Edit Info",
        edit_event_on_site_attendee_path(@event, @attendee),
        class: "btn btn-danger" %>
    </div>

    <div id="finished-btn" class="top-10">
      <%= link_to "Done", new_event_on_site_attendee_path(@event),
        class: "btn btn-success" %>
    </div>
  </div>
</body>
</html>