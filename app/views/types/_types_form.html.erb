<%= form_for @type, html: { class: "text-center" } do |f| %>
  <div class="form-group">
    <%= f.text_field 'name', value: @type.name, placeholder: "Event Type Name",
      autofocus: 'autofocus', required: true, class: "form-control" %>
  </div>

  <div class="form-group text-left">
    <%= f.label :multiple_locations, 'Multiple Locations?',
      class: "right-10 font-400" %>
    <label class="radio-inline">
      <%= f.radio_button 'multiple_locations', true, required: true %> Yes
    </label>
    <label class="radio-inline">
      <%= f.radio_button 'multiple_locations', false %> No
    </label>
  </div>

  <%= f.submit btn_text, class: "btn btn-primary" %>
  <%= link_to 'Cancel', types_path, class: "btn btn-danger left-10" %>
<% end %>