<%= form_tag @event, method: method do %>
  <div class="form-group">
    <%= select_tag 'type', options_for_select(@types, @type), required: true,
      prompt: '-- Select Event Type --', class: "form-control" %>
  </div>

  <div class="form-group">
    <%= select_tag 'year', options_for_select(@years, @year), required: true,
      class: "form-control" %>
  </div>

  <div class="form-group text-left">
    <%= label_tag :subject, 'QR Code Email Subject' %>
    <%= text_field_tag :subject, @event.qr_code_email_subject, required: true,
      class: "form-control" %>
  </div>

  <%= submit_tag btn_text, class: "btn btn-primary" %>
<% end %>